<?xml version="1.0" encoding="utf-8"?>
<window>
    <controls>
        <control type="button">
            <description>Hidden button to close the keyboard when its focused</description>
            <left>0</left>
            <top>0</top>
            <right>0</right>
            <bottom>0</bottom>
            <texturenofocus>-</texturenofocus>
            <texturefocus>-</texturefocus>
            <onclick>Skin.ToggleSetting(SlideShowShowOSD)</onclick>
        </control>
        <control type="group" id="13">
            <visible>SlideShow.IsVideo + [![Player.Playing + Player.HasVideo] | SlideShow.IsPaused]</visible>
            <include>VisibleFadeEffect</include>
            <posy>0</posy>
            <control type="label">
                <width>1920</width>
                <height>1080</height>
                <label>$LOCALIZE[112]</label>
                <align>center</align>
                <font>WindowTitleFont</font>
            </control>
        </control>
    </controls>
</window>
